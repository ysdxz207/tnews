	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd
     http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

	<!-- 读入配置属性文件 -->
	<context:property-placeholder location="classpath:jdbc.properties,classpath:redis.properties,classpath:dubbo-service.properties" />

	<import resource="classpath:spring/dubbo-consumer.xml" />
	<import resource="classpath:spring/spring-mvc.xml" />
	<import resource="classpath:spring/spring-shiro.xml" />
	<import resource="classpath:spring/spring-mybatis.xml" />
	<import resource="classpath:spring/spring-redis.xml" />
</beans>